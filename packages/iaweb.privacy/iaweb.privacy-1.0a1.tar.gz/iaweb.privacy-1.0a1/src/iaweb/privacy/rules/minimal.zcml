<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:gdpr="http://namespaces.plone.org/gdpr"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n_domain="collective.privacy">

  <!-- basic rules -->

  <gdpr:data_use_category
    name="basic_cookies"
    title="Essential cookies"
    description="We use essential cookies to implement load balancing on our
servers, to authenticate users and to store cookie preferences."
    legal_basis="vital_interest"
    identifier="collective.privacy.identifiers.CookieIdentifier"
    storage="collective.privacy.storage.CookieStorage"
    />

</configure>

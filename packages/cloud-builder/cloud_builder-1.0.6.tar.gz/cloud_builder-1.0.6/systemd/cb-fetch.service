[Unit]
Description=CB Project Fetch Service
After=syslog.target
Requires=network-online.target

[Service]
EnvironmentFile=-/etc/cloud_builder
Type=simple
Restart=on-failure
ExecStart=/bin/bash -c 'sudo cb-fetch --project "${CB_PROJECT}" --branch "${CB_BRANCH}" --update-interval "${CB_UPDATE}"'

[Install]
WantedBy=multi-user.target
